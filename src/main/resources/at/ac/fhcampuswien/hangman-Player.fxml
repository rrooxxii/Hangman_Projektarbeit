                  <Image url="@WELCOMETO%20HANGMAN3000.png" />
               </image>
            </ImageView>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <TextField fx:id="playerNumberField" onAction="#setPlayer">
                     <VBox.margin>
                        <Insets bottom="10.0" left="270.0" right="270.0" top="10.0" />
                     </VBox.margin></TextField>
                  <Button fx:id="setPlayerNumber" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#setPlayer" text="Set" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets top="245.0" />
               </padding>
            </VBox>
            <Text fx:id="PlayerNumberText" fill="#ffe25e" layoutX="236.0" layoutY="254.5" stroke="#ffd296" strokeType="OUTSIDE" strokeWidth="0.4" text="Number of Players" AnchorPane.topAnchor="238.5">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
   </children>
