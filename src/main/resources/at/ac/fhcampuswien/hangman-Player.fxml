            <items>
              <MenuItem mnemonicParsing="false" text="Show High Score" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets />
